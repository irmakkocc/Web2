

@{
    ViewBag.Title = "GirisYap";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE html>
<head>
    <title>Giriş Yap</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .card {
            background-color: rgba(152,131,169,0.6);
            margin: 0 380px 0 380px;
        }

        input[type=text] {
            width: 100%;
            padding: 8px 15px;
            margin-top: 0;
            margin-bottom: 10px;
            box-sizing: border-box;
            border: 1px solid #555;
            outline: none;
        }

            input[type=text]:focus {
                background-color: rgba(240,240,240);
            }
        <!-- submit {
            outline: danger;
            float: right;
            margin-top: 5px;
            margin-bottom: 5px;
        }
        -->
        #sifreUnuttum {
            float: right;
            color: black;
        }
    </style>
</head>
<body>

    <div class="jumbotron text-center">
        <h1 style="font-family:antique;">ÜYE GİRİŞİ</h1>
    </div>

    <div class="container">
        <div class="card">
            <div class="card-body">
                <form action="/" method="post">
                    <label for="uyeKAdi">Kullanıcı Adı:</label>
                    <input type="text" id="uyeKAdi" name="KullaniciAdi" required>
                    <label for="uyeSifre">Şifre:</label>
                    <input type="text" id="uyeSifre" name="KullaniciSifre" required>
                    <input type="submit" value="Giriş Yap" href="/Default/Index/">
                    <a href="/Giris/SifreUnuttum/" target="_blank" id="sifreUnuttum">Şifremi Unuttum</a>
                    <!--justify-content-end-->
                </form>
            </div>
        </div>
    </div>
</body>


