@model EntityLayer.Concreate.Kategori

@{
    ViewBag.Title = "EditKategori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h4>Kategori Güncelle</h4>
@using (Html.BeginForm("EditKategori", "AdminKategori", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori ID")
        @Html.TextBoxFor(x => x.KategoriID, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.Kategoriler, new { @class = "form-control" })
        <br />
        <button class="btn btn-primary">Güncelle</button>
    </div>
}

